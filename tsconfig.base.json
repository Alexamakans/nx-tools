{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-tools/ci-context": ["packages/ci-context/src/index.ts"],
      "@nx-tools/container-metadata": ["packages/container-metadata/src/index.ts"],
      "@nx-tools/core": ["packages/core/src/index.ts"],
      "@nx-tools/nx-container": ["packages/nx-container/src/index.ts"],
      "@nx-tools/nx-graphql-codegen": ["packages/nx-graphql-codegen/src/index.ts"],
      "@nx-tools/nx-prisma": ["packages/nx-prisma/src/index.ts"],
      "@nx-tools/nx-set-shas": ["packages/nx-set-shas/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
