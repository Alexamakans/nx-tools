{
  "extends": ["gitlab>gperdomor/renovate-config"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:monthly"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "labels": ["update-type::patch"]
    },
    {
      "matchPackagePatterns": ["^@nrwl"],
      "automerge": false
    }
  ]
}
